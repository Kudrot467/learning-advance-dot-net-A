@{
    ViewBag.Title = "Home Page";
}
<p class="text-danger">
    @Html.ValidationSummary()
</p>
<main>
    <form method="post" action="" class="row g-3">

        <div class="col-md-6">
            <label for="Id" class="form-label">Id</label>
            <input type="text" value="@Model.Id" name="Id" class="form-control" id="Id" placeholder="enter your id">
            <span class="text-danger">@Html.ValidationMessage("Id")</span>
        </div>
        <div class="col-12">
            <label for="Name" class="form-label">Name</label>
            <input type="text" value="@Model.Name" name="Name" class="form-control" id="Name" placeholder="enter your name">
            <span class="text-danger">@Html.ValidationMessage("Name")</span>
        </div>
        <div class="col-12">
            <label for="Username" class="form-label">Username</label>
            <input type="text" value="@Model.Username" name="Username" class="form-control" id="Name" placeholder="enter your username">
            <span class="text-danger">@Html.ValidationMessage("Username")</span>
        </div>
        <div class="col-md-6">
            <label for="Email" class="form-label">Email</label>
            <input type="email" value="@Model.Email" name="Email" class="form-control" id="Email" placeholder="enter your email">
            <span class="text-danger">@Html.ValidationMessage("Email")</span>
        </div>

        <div class="col-12">
            <button type="submit" class="btn btn-primary">Sign in</button>
        </div>
    </form>
</main>